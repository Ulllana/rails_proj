<% if current_user %>
  <p>Welcome <%= current_user.email %></p>
  <%= link_to "Logout", logout_path, method: :delete %>
<% else %>
  <%= link_to "Login", login_path %> |
  <%= link_to "Sign Up", signup_path %>
<% end %>


<ul>
  <%- @users.each do |user| %>
    <li>
      <%= "#{user.name} (#{user.email}) created a #{user.catlists[0].name}
            catlist with #{user.catlists[0].cats.count} cats" %>
    </li>
  <% end %>
</ul>

<%= button_to 'Create new cat', new_cat_path, method: :get %>

<%= button_to 'Show All Records', show_all_records_path, method: :get %>
