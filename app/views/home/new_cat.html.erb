<%= form_with model: @catlist, url: create_cat_path, local: true do |form| %>
  <% if @catlist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@catlist.errors.count, "error") %> prohibited this catlist from being saved:</h2>
      <ul>
        <% @catlist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  
  <!-- Новые поля для ввода данных о коте -->
  <div>
    <%= form.label :cat_name %>
    <%= form.text_field :cat_name %>
  </div>
  <div>
    <%= form.label :cat_description %>
    <%= form.text_area :cat_description %>
  </div>
  <!-- Конец новых полей -->
  
  <div>
    <%= form.label :country_id %>
    <%= form.collection_select :country_id, @countries, :id, :title %>
  </div>
  <div>
    <%= form.submit "Create Catlist" %>
  </div>
<% end %>
